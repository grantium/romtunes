{
  "name": "romtunes",
  "version": "1.0.0",
  "description": "iTunes for ROM management - Organize your emulation library",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl"
  },
  "keywords": [
    "electron",
    "rom",
    "emulation",
    "game-library"
  ],
  "author": {
    "name": "RomTunes",
    "email": "support@romtunes.app"
  },
  "homepage": "https://github.com/grantium/romtunes",
  "repository": {
    "type": "git",
    "url": "https://github.com/grantium/romtunes.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0 <=22.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "optionalDependencies": {
    "dmg-license": "^1.0.11"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "better-sqlite3": "^11.0.0"
  },
  "build": {
    "appId": "com.romtunes.app",
    "productName": "RomTunes",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.entertainment",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "identity": null
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Game",
      "maintainer": "support@romtunes.app"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
